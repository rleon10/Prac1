pipeline {
   tools {
     maven "M3"
   }
   agent any
   stages {
     stage("Preparation") { 
       steps {
         git 'https://github.com/rleon10/Prac1.git'
       }
     }
     stage("Test") {
       steps {
         sh "cd cd tic-tac-toe-enunciado; mvn test"
       }
     }
   } 
   post {
      always {
	    junit "cd tic-tac-toe-enunciado/**/target/surefire-reports/TEST-*.xml"
      }
   }
}